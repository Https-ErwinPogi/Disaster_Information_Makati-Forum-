<div class="container">
<h1>Disaster Information in Makati [Forum]</h1>
<table class="table text-center table-striped table-dark">
  <thead class="thead-dark">
  <tr>
    <th>Title</th>
    <th>Address</th>
    <th>Category</th>
    <th>Author</th>
    <th>Comment Counts</th>
    <th>Action</th>

  </tr>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.title %>
        </td>
      <td><%= post.address %></td>
      <td><%= post.categories.pluck(:disaster).join(', ') %></td>
      <td><%= post.user.email %></td>
      <td><%= post.comments_count %> <%= image_tag ('hot.png'), width: "30", height: "30" if @hot_posts.include?(post)%></td>
      <td>
        <%= link_to 'Read more', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) if post.user == current_user %>
        <%= button_to 'Delete', post_path(post), method: :delete, :onclick => "return confirm('Are you sure you want to delete?')" if post.user == current_user%>
        <%#= link_to 'Comment', post_comments_path(post) %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New", new_post_path %>
</div>