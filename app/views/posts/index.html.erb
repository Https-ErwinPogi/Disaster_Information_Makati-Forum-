<h1>Disaster Information in Makati [Forum]</h1>
<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Address</th>
    <th>Category</th>
    <th>User</th>
    <th>Action</th>
  </tr>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.address %></td>
      <td><%= post.categories.pluck(:disaster).join(',') %></td>
      <td><%= post.user.email %></td>
      <td>
        <%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) if post.user == current_user %>
        <%= button_to 'Delete', post_path(post), method: :delete if post.user == current_user%>
        <%= link_to 'Comment', post_comments_path(post) %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New", new_post_path %>