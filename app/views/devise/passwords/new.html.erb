<div class="text-center">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<div class="col d-flex justify-content-center">

  <div class="card shadow-sm p-3 mb-10 bg-white rounded" style="max-width: 50rem; max-height: 22rem">

    <h2 class="text-center p-4">Forgot your password?</h2>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


        <div class="form-group">
          <%= f.label :email%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter your email" %>

        </div>

        <div class="actions p-4 text-center">
          <%= f.submit "Forgot Password", class:"btn btn-warning" %>
        </div>
      <% end %>

     <div class="text-center mb-4">
      <%= render "devise/shared/links" %>
     </div>
    </div>

  </div>
</div>
